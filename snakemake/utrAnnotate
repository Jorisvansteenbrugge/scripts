bamfiles = ["ClutchA_polyA_0.5_hpf","ClutchA_polyA_4_hpf"]
rule utr:
	input:
		bed=lambda wildcards: config["bedfiles"][wildcards.bed],
		bams=expand("/home/jsteenbrugge/data/bamFiles/bamPolyA_CA/{bam}.bam", bam=bamfiles)
	output:
		"{bed}_utrExtended.bed"
	shell:
		"pita_utr -i {input.bed} -b {input.bams}  > {output}"
